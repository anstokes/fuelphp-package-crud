<!-- Tab Titles -->
<nav>
	<div id="nav-tab" class="nav nav-tabs">
	{{#tabs}}
	<a class="nav-link {{#active}}active{{/active}}" data-bs-toggle="tab" href="#{{name}}">
		{{description}}
	</a>
	{{/tabs}}					
	</div>
</nav>

<div id="configuration">
	<div id="refreshConfiguration" class="tab-content">
		{{#alerts}}
		<div id="configurationAlert" class="row-fluid">
			{{#hasErrors}}
			<div class='alert alert-danger mt-3'>
				<i class='fas fa-exclamation-triangle me-1'></i>
				Unable to save {{title}}:
				<ul class="mt-3">
					{{#errors}}
					<li>{{.}}</li>
					{{/errors}}
				</ul>
			</div>
			{{/hasErrors}}
			{{#hasSaved}}
			<div class='alert alert-success mt-3'>
				<i class='fas fa-check-circle me-1'></i>
				Successfully saved {{title}}.
			</div>
			{{/hasSaved}}
		</div>
		{{/alerts}}

		<!-- Tab Content -->
		{{#tabs}}
		<div id="{{name}}" class="tab-pane {{#active}}active{{/active}}">
			{{{ content }}}
		</div>
		{{/tabs}}
	</div>
</div>